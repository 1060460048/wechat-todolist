/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.todo {
  margin: 10px;
  display: flex;
  align-items: center;
  background: #F5F5F5;
  height: 35px;
}

.new-todo {
  border: none;
  font-style: italic;
  width: 100%;
}

.todo-list {
  margin: 10px;
  display: flex;
  flex-direction: column;
  flex-grow: 2;
}

.todo-item {
  display: flex;
  height: 40px;
}

.todo-check {
  margin-top: -3px;
}

.todo-content {
  margin-left: 10px;
}

.todo-completed {
  color: #d9d9d9;
  text-decoration: line-through;
}
