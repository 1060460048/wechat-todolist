.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.todo {
  display: flex;
  justify-content: center;
  width: 100%;
}

.new-todo {
  border: none;
  background: #F5F5F5;
  font-style: italic;
  width: 80%;
}
